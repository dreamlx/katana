<div class="container">
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_in', :default => "Sign in") %></h4>
  </div>
  <div class="panel-body">
<%- [:error, :warning, :notice, :message, :danger].each do |key| -%> 
<%- if flash[key] -%>
 <div class='.text-center .alert .alert-danger'>     
 <%= content_tag :div, flash[key], :id=> key, class: "alert alert-#{key}"%>
  
 </div>
<%- end -%>
<%- end -%>
    <%= form_for(:accounts_user, url: new_accounts_user_session_path(@accounts_user), html: { role: "form", class: 'form-signin' }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <!--div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t('.remember_me', :default => "Remember me") %>
          <% end %>
        </div-->
      <% end %>
      <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-lg btn-primary " %>
    <% end %>
  </div>
</div>

<%= link_to '< back to Home', root_path %>
</div>
